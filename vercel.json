{
  "version": 2,
  "builds": [
    {
      "src": "**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "uploads/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/uploads/(.*)", "dest": "/uploads/$1" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/(.*)\\.php$", "dest": "/$1.php" },
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}