{
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.7.4" },
    "api/**/*.php": { "runtime": "vercel-php@0.7.4" }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/uploads/(.*)", "dest": "/uploads/$1" },
    { "src": "/script/(.*)", "dest": "/script/$1" },

    { "src": "/Frontend/(.*)", "dest": "/Frontend/$1" },
    { "src": "/Backend/(.*)", "dest": "/Backend/$1" },
    { "src": "/admindash-frontend/(.*)", "dest": "/admindash-frontend/$1" },
    { "src": "/customerdash-frontend/(.*)", "dest": "/customerdash-frontend/$1" },
    { "src": "/admindash-backend/(.*)", "dest": "/admindash-backend/$1" },
    { "src": "/customerdash-backend/(.*)", "dest": "/customerdash-backend/$1" },

    { "src": "/(login|register|forgot_password|reset_password|verify)\\.php", "dest": "/Frontend/auth/$1.php" },
    { "src": "/admindashboard\\.php", "dest": "/Frontend/admindash-frontend/admindashboard.php" },
    { "src": "/customerdashboard\\.php", "dest": "/Frontend/customerdash-frontend/customerdashboard.php" },

    { "src": "/api/(.*)", "dest": "/api/$1" },

    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}