{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.7.4"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)\\.php", "dest": "/api/$1.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}